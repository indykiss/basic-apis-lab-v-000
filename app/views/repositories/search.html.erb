<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @search %>
    <ul>
    <% @queries.each do |query| %>
      <li>
        <%= query["name"] %><br>
        <%= query["q"] %><br>
        Searches: <%= query["stats"] %>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
